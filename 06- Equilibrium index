#include<iostream>
using namespace std;
#define MAX 1000000
int array[MAX];
int prefix[MAX];

int leftsum(int l){
    return prefix[l-1];
}

int rightsum(int l,int r){
    int res=prefix[r]-prefix[l];
    return res;
}

int main(){
    int n;
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>array[i];
    }

    prefix[0]=array[0];
    for(int i=1;i<n;i++){
        prefix[i]=prefix[i-1]+array[i];
    }
    
    bool found=0;
    for(int i=1;i<n-1;i++){
        if(leftsum(i)==rightsum(i,n-1)){
            cout<<i;
            found=1;
            break;
        }
    }    

    if(!found){cout<<-1;}

    return 0;
}